<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= username %> - Conversation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../assets/style.css">
  <link rel="shortcut icon" href="../assets/favicon.ico" type="image/x-icon">
</head>
<body>

  <div class="container my-5">
    <div class="chat-window bg-dark p-4 border border-black rounded">
      <h1 class="text-center mb-4">Chat messages from <span class="fw-bold"><%= username %></span></h1>
      <div class="text-center">
        <a href="/" class="btn btn-primary">🏠 Home</a>
      </div>
      <div id="chat-messages">
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach((message) => { %>
            <div class="message bg-dark border rounded border-warning-subtle py-3 px-3 my-3 shadow-lg">
              <div class="user fw-bold"><%= message.User %></div>
              <div class="timestamp text-muted"><%= message.Date %> <%= message.Time %></div>
              <div class="text"><%= message.Text %></div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="text-muted">No messages found.</div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
